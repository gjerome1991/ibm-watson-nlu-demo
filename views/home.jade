extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg

    .row
      .col-sm-6
        .panel
          .panel-body
            h3 Keywords
            table#keyword
              tr
                th Keyword
                th Relevance
              for keyword in keywords
                tr
                  td #{keyword.text}
                  td #{keyword.relevance.toFixed(4)}
      .col-sm-6
        .panel
          .panel-body
            h3 Entities
            table#entity
              tr
                th Entity
                th Relevance
              for entity in entities
                tr
                  td #{entity.text}
                  td #{entity.relevance.toFixed(4)}

      .col-md-12
        .panel
          .panel-body
            h3 Input text
            p #{text}
